{
  "name": "bartoc.org",
  "version": "0.0.1",
  "description": "BARTOC.org web interface",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint '**/*.js'; ejslint views/*.ejs; vue-cli-service lint --no-fix vue/**/*.vue",
    "fix": "eslint --fix '**/*.js'; vue-cli-service lint vue/**/*.vue",
    "lint-staged": "lint-staged",
    "data": "mkdir -p cache; npm run data:nkostype; make -C data; make -C bin",
    "data:nkostype": "curl http://api.dante.gbv.de/voc/nkostype/top | jq -c .[] > cache/nkostype.ndjson",
    "validate": "jskos-validate",
    "dump": "js ./bin/dump.js",
    "vue:serve": "vue-cli-service serve",
    "build": "vue-cli-service build --no-clean --report-json",
    "express:serve": "NODE_ENV=development nodemon server.js",
    "dev": "concurrently \"npm:express:serve\" \"npm:vue:serve\""
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.vue": "vue-cli-service lint"
  },
  "pre-commit": "lint-staged",
  "author": "Jakob VoÃŸ",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gbv/bartoc.org.git"
  },
  "engines": {
    "node": ">=10.0"
  },
  "dependencies": {
    "cocoda-sdk": "github:gbv/cocoda-sdk#ed206bf",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.2",
    "front-matter": "^4.0.2",
    "gbv-login-client": "^0.2.13",
    "jskos-cli": "^0.4.5",
    "jsondiffpatch": "^0.4.1",
    "jsonld": "^3.2.0",
    "lodash": "^4.17.20",
    "marked": "^1.2.5",
    "n-readlines": "^1.0.1",
    "vue": "^3.0.4"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "@vue/cli-plugin-babel": "^4.5.9",
    "@vue/cli-plugin-eslint": "^4.5.9",
    "@vue/cli-service": "^4.5.9",
    "@vue/compiler-sfc": "^3.0.4",
    "@vue/eslint-config-standard": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.3.0",
    "ejs-lint": "^1.1.0",
    "eslint": "^7.15.0",
    "eslint-config-gbv": "github:gbv/eslint-config-gbv#15a7858",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.2.0",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "pre-commit": "^1.2.2"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "vue/*",
      "dist/*"
    ]
  }
}
